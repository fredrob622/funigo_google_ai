<%- include('../partials/header') %>

<div class="content">
    <h2>Rechercher une Région Française</h2>
    <form action="/regions/search" method="POST" class="search-form">
        <input type="text" name="searchTerm" placeholder="Entrez un nom de région..." value="<%= searchTerm %>" required>
        <button type="submit">Rechercher</button>
    </form>

    <% if (results.length > 0) { %>
        <h3>Résultats pour "<%= searchTerm %>"</h3>
        <div class="results-table-container">
            <table>
                <thead>
                    <tr>
                        <!-- Adaptez ces colonnes à votre future table 'region_fr' -->
                        <th>Nom Région</th>
                        <th>Code Région</th>
                        <th>Chef-lieu</th>
                        <th>Population</th>
                    </tr>
                </thead>
                <tbody>
                    <% results.forEach(region => { %>
                        <tr>
                            <td><%= region.nom_reg || 'N/A' %></td>
                            <td><%= region.code_reg || 'N/A' %></td>
                            <td><%= region.chef_lieu || 'N/A' %></td>
                            <td><%= region.population ? region.population.toLocaleString('fr-FR') : 'N/A' %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    <% } else if (searchTerm) { %>
        <p>Aucun résultat trouvé pour "<%= searchTerm %>".</p>
    <% } %>
</div>

<%- include('../partials/footer') %>